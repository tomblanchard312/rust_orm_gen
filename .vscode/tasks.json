{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo check",
      "type": "shell",
      "command": "cargo",
      "args": ["check"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo test",
      "type": "shell",
      "command": "cargo",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "cargo clippy",
      "type": "shell",
      "command": "cargo",
      "args": ["clippy"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Generate Schema Visualizations",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "all", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Generate DOT Diagram",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "dot", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Generate Mermaid Diagram",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "mermaid", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Generate HTML Visualization",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "html", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Export to PDF",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "pdf", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Export to SVG",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "svg", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Export to Visio",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "visualize", "--format", "visio", "--output-dir", "./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run Database Migrations",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "migrate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Generate ORM Code",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "generate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Validate Schema",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--", "validate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Clean Output Directory",
      "type": "shell",
      "command": "Remove-Item",
      "args": ["-Path", "./output", "-Recurse", "-Force", "-ErrorAction", "SilentlyContinue"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Open Output Directory",
      "type": "shell",
      "command": "explorer",
      "args": ["./output"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Run with Watch",
      "type": "shell",
      "command": "cargo",
      "args": ["watch", "-x", "run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true,
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "Test with Coverage",
      "type": "shell",
      "command": "cargo",
      "args": ["tarpaulin", "--out", "Html", "--output-dir", "coverage"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Format Code",
      "type": "shell",
      "command": "cargo",
      "args": ["fmt"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Open in Browser - HTML Visualization",
      "type": "shell",
      "command": "start",
      "args": ["./output/schema.html"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "Generate HTML Visualization"
    }
  ]
}
